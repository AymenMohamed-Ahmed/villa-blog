---
import { getEntry, getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ui, defaultLang, languages } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => {
    return { params: { lang: lang as 'en' | 'fr' | 'es' | 'ar' } };
  });
}

const { lang = defaultLang } = Astro.params as { lang: 'en' | 'fr' | 'es' | 'ar' };
const t = (key: keyof (typeof ui)[typeof lang]) => ui[lang][key] || ui[defaultLang][key];

const pageContent = await getEntry('main-content', 'specs').catch(() => null);
const restaurants = await getCollection('restaurants').catch(() => []);
const meetingRooms = await getCollection('meeting-rooms').catch(() => []);
---
<BaseLayout title={t('specs.title')} lang={lang}>
    
    <main class="container mx-auto max-w-7xl px-4 sm:px-6 py-12 sm:py-16">

        {pageContent ? (
            <div class="space-y-16 sm:space-y-20">

                <!-- Section: Introduction -->
                <section id="introduction" class="bg-white dark:bg-charcoal-800 rounded-xl shadow-lg overflow-hidden p-6 sm:p-8 md:p-12">
                    <h2 class="text-3xl sm:text-4xl font-serif text-charcoal-900 dark:text-cream-100 border-b-2 border-gold-light dark:border-gold-dark pb-4 mb-6 sm:mb-8">{pageContent.data.introduction.title[lang]}</h2>
                    <p class="text-charcoal-700 dark:text-cream-200 text-lg leading-relaxed text-justify">
                        {pageContent.data.introduction.body[lang]}
                    </p>
                </section>

                <!-- Section: Accommodation -->
                <section id="accomodation" class="bg-white dark:bg-charcoal-800 rounded-xl shadow-lg overflow-hidden p-6 sm:p-8 md:p-12">
                    <h2 class="text-3xl sm:text-4xl font-serif text-charcoal-900 dark:text-cream-100 border-b-2 border-gold-light dark:border-gold-dark pb-4 mb-6 sm:mb-8">{pageContent.data.accomodation.title[lang]}</h2>
                    <p class="text-charcoal-700 dark:text-cream-200 text-lg leading-relaxed text-justify mb-8">
                        {pageContent.data.accomodation.body[lang]}
                    </p>
                    {pageContent.data.accomodation.images && (
                        <div class="flex justify-center">
                            <div class="carousel carousel-center w-full max-w-4xl rounded-box space-x-4 bg-neutral-focus p-4">
                                {pageContent.data.accomodation.images.map((image: string, index: number) => (
                                    <div id={`slide${index}`} class="carousel-item">
                                        <img src={image} alt={`Accommodation ${index + 1}`} class="rounded-box" />
                                    </div> 
                                ))}
                            </div>
                        </div>
                    )}
                </section>

                <!-- Section: Restaurants & Bars -->
                <section id="restaurants" class="bg-white dark:bg-charcoal-800 rounded-xl shadow-lg overflow-hidden p-6 sm:p-8 md:p-12">
                    <h2 class="text-3xl sm:text-4xl font-serif text-charcoal-900 dark:text-cream-100 border-b-2 border-gold-light dark:border-gold-dark pb-4 mb-6 sm:mb-8">{pageContent.data.restaurants_intro.title[lang]}</h2>
                    <p class="text-charcoal-700 dark:text-cream-200 text-lg leading-relaxed mb-8 sm:mb-10 text-justify">
                        {pageContent.data.restaurants_intro.body[lang]}
                    </p>
                    {pageContent.data.restaurants.images && (
                        <div class="flex justify-center mb-8">
                            <div class="carousel carousel-center w-full max-w-4xl rounded-box space-x-4 bg-neutral-focus p-4">
                                {pageContent.data.restaurants.images.map((image: string, index: number) => (
                                    <div id={`restaurant-slide${index}`} class="carousel-item">
                                        <img src={image} alt={`Restaurant ${index + 1}`} class="rounded-box" />
                                    </div>
                                ))}
                            </div>
                        </div>
                    )}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
                        {restaurants.map(restaurant => {
                            const CardContent = (
                                <div class="bg-cream-100 dark:bg-charcoal-700 rounded-lg p-6 h-full flex flex-col transform transition duration-300 hover:shadow-xl hover:-translate-y-2">
                                    <h3 class="text-2xl font-serif text-gold-dark dark:text-cream-100">{restaurant.data.name[lang]}</h3>
                                    <p class="text-charcoal-700 dark:text-cream-200 mt-3 mb-4 font-sans flex-grow">{restaurant.data.description[lang]}</p>
                                    {restaurant.data.capacity != null && (
                                        <p class="text-sm text-gold font-semibold font-sans">Capacity: {restaurant.data.capacity}</p>
                                    )}
                                </div>
                            );

                            const url = restaurant.data.url 
                                ? restaurant.data.url.replace('menu.elminzah.ma/', `menu.elminzah.ma/${lang}/`)
                                : null;

                            return url ? (
                                <a href={url} target="_blank" rel="noopener noreferrer" class="block h-full">
                                    {CardContent}
                                </a>
                            ) : (
                                <div class="h-full">
                                    {CardContent}
                                </div>
                            );
                        })}
                    </div>
                </section>

                <!-- Section: Meeting Rooms -->
                <section id="meetings" class="bg-white dark:bg-charcoal-800 rounded-xl shadow-lg overflow-hidden p-6 sm:p-8 md:p-12">
                    <h2 class="text-3xl sm:text-4xl font-serif text-charcoal-900 dark:text-cream-100 border-b-2 border-gold-light dark:border-gold-dark pb-4 mb-6 sm:mb-8">{pageContent.data.meetings_intro.title[lang]}</h2>
                    <p class="text-charcoal-700 dark:text-cream-200 text-lg leading-relaxed mb-8 sm:mb-10 text-justify">
                        {pageContent.data.meetings_intro.body[lang]}
                    </p>
                    {pageContent.data.meetings.images && (
                        <div class="flex justify-center mb-8">
                            <div class="carousel carousel-center w-full max-w-4xl rounded-box space-x-4 bg-neutral-focus p-4">
                                {pageContent.data.meetings.images.map((image: string, index: number) => (
                                    <div id={`meeting-slide${index}`} class="carousel-item">
                                        <img src={image} alt={`Meeting Room ${index + 1}`} class="rounded-box" />
                                    </div>
                                ))}
                            </div>
                        </div>
                    )}
                    <div class="bg-cream-100 dark:bg-charcoal-700 rounded-2xl shadow-lg border border-gold-light dark:border-gold-dark overflow-hidden">
                        {meetingRooms.map(room => (
                            <div class="p-6 sm:p-8">
                                <h3 class="text-2xl sm:text-3xl font-serif text-gold-dark dark:text-cream-100 text-center mb-6 pb-4 border-b-2 border-gold-light dark:border-gold-dark">{room.data.name[lang]}</h3>
                                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-x-6 gap-y-8 text-center">
                                    
                                    {/* -- Capacities -- */}
                                    <div class="flex flex-col items-center justify-center p-4 bg-white dark:bg-charcoal-800 rounded-lg shadow-md transition transform hover:-translate-y-1">
                                        <span class="text-sm font-serif font-bold text-gold-dark dark:text-gold-light uppercase tracking-wider">{t('meetings.theater')}</span>
                                        <span class="text-2xl font-bold text-charcoal-900 dark:text-white mt-1">{room.data.theater ?? '—'}</span>
                                    </div>
                                    <div class="flex flex-col items-center justify-center p-4 bg-white dark:bg-charcoal-800 rounded-lg shadow-md transition transform hover:-translate-y-1">
                                        <span class="text-sm font-serif font-bold text-gold-dark dark:text-gold-light uppercase tracking-wider">{t('meetings.u_shape')}</span>
                                        <span class="text-2xl font-bold text-charcoal-900 dark:text-white mt-1">{room.data.u_shape ?? '—'}</span>
                                    </div>
                                    <div class="flex flex-col items-center justify-center p-4 bg-white dark:bg-charcoal-800 rounded-lg shadow-md transition transform hover:-translate-y-1">
                                        <span class="text-sm font-serif font-bold text-gold-dark dark:text-gold-light uppercase tracking-wider">{t('meetings.cocktail')}</span>
                                        <span class="text-2xl font-bold text-charcoal-900 dark:text-white mt-1">{room.data.cocktail ?? '—'}</span>
                                    </div>
                                    <div class="flex flex-col items-center justify-center p-4 bg-white dark:bg-charcoal-800 rounded-lg shadow-md transition transform hover:-translate-y-1">
                                        <span class="text-sm font-serif font-bold text-gold-dark dark:text-gold-light uppercase tracking-wider">{t('meetings.lunch_served')}</span>
                                        <span class="text-2xl font-bold text-charcoal-900 dark:text-white mt-1">{room.data.lunch_diner_served ?? '—'}</span>
                                    </div>
                                    <div class="flex flex-col items-center justify-center p-4 bg-white dark:bg-charcoal-800 rounded-lg shadow-md transition transform hover:-translate-y-1">
                                        <span class="text-sm font-serif font-bold text-gold-dark dark:text-gold-light uppercase tracking-wider">{t('meetings.lunch_buffet')}</span>
                                        <span class="text-2xl font-bold text-charcoal-900 dark:text-white mt-1">{room.data.lunch_diner_buffet ?? '—'}</span>
                                    </div>

                                    {/* -- Dimensions -- */}
                                    <div class="flex flex-col items-center justify-center p-4 bg-white dark:bg-charcoal-800 rounded-lg shadow-md transition transform hover:-translate-y-1">
                                        <span class="text-sm font-serif font-bold text-gold-dark dark:text-gold-light uppercase tracking-wider">{t('meetings.dimensions')}</span>
                                        <span class="text-xl font-bold text-charcoal-900 dark:text-white mt-2">
                                            {room.data.length_m}m &times; {room.data.width_m}m &times; {room.data.height_m}m
                                        </span>
                                    </div>

                                    {/* -- Location -- */}
                                    <div class="flex flex-col items-center justify-center p-4 bg-white dark:bg-charcoal-800 rounded-lg shadow-md transition transform hover:-translate-y-1 col-span-full md:col-span-2">
                                        <span class="text-sm font-serif font-bold text-gold-dark dark:text-gold-light uppercase tracking-wider">{t('meetings.location')}</span>
                                        <span class="text-xl font-semibold text-charcoal-900 dark:text-white mt-2 font-serif">{room.data.location[lang]}</span>
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                </section>

                <!-- Section: Relaxation & Leisure -->
                <section id="leisure" class="bg-white dark:bg-charcoal-800 rounded-xl shadow-lg overflow-hidden p-6 sm:p-8 md:p-12">
                    <h2 class="text-3xl sm:text-4xl font-serif text-charcoal-900 dark:text-cream-100 border-b-2 border-gold-light dark:border-gold-dark pb-4 mb-6 sm:mb-8">{pageContent.data.leisure_intro.title[lang]}</h2>
                    <p class="text-charcoal-700 dark:text-cream-200 text-lg leading-relaxed mb-8 sm:mb-10 text-justify">
                        {pageContent.data.leisure_intro.body[lang]}
                    </p>
                    {pageContent.data.leisure_intro.images && (
                        <div class="flex justify-center">
                            <div class="carousel carousel-center w-full max-w-4xl mx-auto rounded-box space-x-4 bg-neutral-focus p-4">
                            {pageContent.data.leisure_intro.images.map((image: string, index: number) => (
                                <div id={`leisure-slide${index}`} class="carousel-item">
                                    <img src={image} alt={`Leisure ${index + 1}`} class="rounded-box h-64" />
                                </div> 
                            ))}
                        </div>
                    </div>
                    <div class="flex justify-center w-full py-2 gap-2">
                        {pageContent.data.leisure_intro.images.map((image: string, index: number) => (
                            <a href={`#leisure-slide${index}`} class="btn btn-xs">{index + 1}</a> 
                        ))}
                    </div>
                    )}
                    <div class="space-y-8 mt-8">
                        <div>
                            <h3 class="text-2xl font-serif text-gold-dark mb-4">{pageContent.data.sports_intro.title[lang]}</h3>
                            <p class="text-charcoal-700 dark:text-cream-200 leading-relaxed text-justify">
                                {pageContent.data.sports_intro.body[lang]}
                            </p>
                        </div>
                    </div>
                </section>

            </div>
        ) : (
            <div class="text-center text-red-600 dark:text-red-300 font-semibold bg-red-100 dark:bg-red-900 p-8 rounded-xl shadow-lg">
                <h2 class="text-3xl font-serif">Content Files Not Found</h2>
                <p class="mt-2 font-sans">Could not load data from <code class="text-sm bg-red-200 dark:bg-red-800 p-1 rounded">src/content/main-content/specs.json</code>.</p>
                <p class="mt-4 font-sans">Please ensure the content files exist and are correctly formatted.</p>
            </div>
        )}

    </main>
</BaseLayout>